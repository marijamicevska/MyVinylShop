@model IEnumerable<MyVinylShop.Models.Vinyl>

@{
    ViewBag.Title = "Vinyls";
}

@if (Model.Count() == 0)
{
    <h3 style="font-style:italic;">Oh no! We couldn’t find what you were looking for.</h3>
    <a href="~/Years/Index"><i>Go back</i></a>
}
else
{

    <h2 style="text-shadow:2px 2px #ffffff">Vinyls by Year</h2>

    <table class="table">
        <tr>
            <th>

            </th>
            <th>
                @Html.DisplayNameFor(model => model.Artist.ArtistName)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.VinylPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Release)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>

            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>



                <td>
                    @Html.DisplayFor(modelItem => item.VinylName)
                    <br />
                    <a href="@Url.Action("Buy", "ShoppingCart", new { id = item.VinylId })" style="text-decoration:none;">ORDER NOW</a>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Artist.ArtistName)
                </td>
                <td>
                    $@Html.DisplayFor(modelItem => item.VinylPrice)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Release)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    <img alt="@item.VinylName" src="@Url.Content(@item.VinylURL)" width="220px" height="220px" />
                </td>

            </tr>
        }

    </table>
}
